<Ask_take_photo@FloatLayout>

    FloatLayout:
        canvas.after:
            Color:
                hsv: 1, 0, 1
            Rectangle:
                # self here refers to the widget i.e BoxLayout
                pos: self.pos
                size: self.size
            BorderImage:
                source: "bakkun_without_back_ground.png"
                size: 400, 400
                pos: 150, 50
            BorderImage:
                source: "fukidashi.png"
                size: 250, 150
                pos: 450, 400

    Label:  # add comment
        text: "写真を取ろうよ！"
        color: 1,0,1,1
        font_size: 25
        pos: 230, 200

    FloatLayout:
        Button:
            id: button1
            text: 'Yes'
            on_press: app.root.go_to_display_camera_image(), app.root.send_selected_key("y")
    
            color: [1, 0, 0, 1]
            font_size: 60
            pos: 50, 50
            size_hint: .2, .2 
        Button:
            id: button2
            text: 'No'
            on_press: app.root.end_screen(), app.root.send_selected_key("n")
            color: [0, 0, 1, 1]
            font_size: 60
            pos: 500, 50
            size_hint: .2, .2 



